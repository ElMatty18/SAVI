<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradiente_informacion"
    android:gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perfil"
            android:gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/colorBlanco"
            android:textStyle="italic"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/gradiente_perfil2"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/colorBlanco"
            >

            <EditText android:id="@+id/txtNombreUsuario"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="Nombre"
                android:inputType="text" />

            <EditText android:id="@+id/txtApellidoUsuario"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="Apellido"
                android:inputType="text" />

            <EditText android:id="@+id/txtDniUsuario"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="Nro. Documento"
                android:inputType="number"
                android:ems="8"/>

            <EditText
                android:id="@+id/dateFechaNacimientoUsuario"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="8"
                android:hint="Fecha Nacimiento"
                android:inputType="datetime" />

            <EditText android:id="@+id/txtCelularUsuario"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="Telefono Celular"
                android:ems="8"
                android:inputType="phone" />

            <EditText android:id="@+id/txtTelefonoUsuario"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:hint="Telefono Fijo"
                android:ems="8"
                android:inputType="phone" />

        </LinearLayout>

