<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="192dp">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/tools"
            android:id="@+id/container_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"
            card_view:cardBackgroundColor="@color/divider_color"
            card_view:cardCornerRadius="3dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:id="@+id/ApraiseReceivedExpandable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#fff">

                    <TextView
                        android:id="@+id/skillTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:scrollHorizontally="true"
                        android:text="Coaching"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/skillDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/skillTitle"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="5dp"
                        android:text="Ability to prove guidance and improve colleague`s performance"
                        android:textColor="#000"
                        android:textSize="18sp" />


                </RelativeLayout>
            </ScrollView>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>